{% extends "layout.html.jinja2" %}

{% block title %}Index{% endblock %}
{% block head %}
    {{ super() }}
    <style type="text/css">
        .important {
            color: #336699;
        }
    </style>
{% endblock %}
{% block content %}
    <select name="products">
        {% for product in products %}
            <option value="{{ product.name }}">{{ product.description }}</option>
        {% endfor %}
    </select>
{% endblock %}
