{% extends "layout.html.jinja2" %}

{% block title %}{{ dataset.metadata.label }}{% endblock %}
{% block head %}
    {{ super() }}
    <style type="text/css">
        .property {
            font-family: monospace;
        }
        .property .property {
            padding-left: 15px;
        }
        .embedded > .property {
            margin-left: 15px;
            border-left: 3px solid #ccc;
            color: #3A7734;
        }

        <!-- an embedded source dataset document -->
    </style>
{% endblock %}
{% block panel %}

{% endblock %}
{% block content %}
    <div class="panel odd">
        <h2>{{ dataset.metadata.label }}</h2>
        <div>
            {% for key, value in dataset.metadata.fields.items() if value is not mapping %}
                <div class="query-param">
                    <span class="key">{{ key }}:</span>
                    <span class="value">{{ value | query_value }}</span>
                </div>
            {% endfor %}
        </div>
    </div>
    {% if dataset.metadata.sources %}
        <div class="panel">
            <h2>Derived From</h2>
            <div class="sources">
                {% for key, value in dataset.metadata.sources.items() %}
                    <span class="badge">{{ key }}: <a href="{{ value.id }}">{{ value.ga_label }}</a></span>
                {% endfor %}
            </div>
        </div>
    {% endif %}
    <div class="panel odd metadata-tree">
        <h2>Metadata</h2>
        {%- for key, value in dataset_metadata.items() recursive %}
            <div class="property {% if key == 'source_datasets' %}embedded{% endif %}">
                {% if value is mapping %}
                    <div class="key">{{ key }}:</div>
                    {{ loop(value.items()) }}
                {% else %}
                    <span class="key">{{ key }}:</span>
                    <span class="value">{{ value }}</span>
                {% endif %}
            </div>
        {%- endfor %}
    </div>
{% endblock %}
